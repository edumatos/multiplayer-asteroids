package {	import flash.display.MovieClip	import flash.events.Event	public class Particle extends MovieClip{		private var speed:Number;		private var angle:Number;		private var lifetime:Number;		private var spawn:Number;		private var ct:Number;		public function Particle(x:Number, y:Number, size:Number, speed:Number, angle:Number, lifetime:Number){			this.x = x			this.y = y			this.scaleX = size			this.scaleY = size			this.angle = angle;			this.speed = speed;			this.lifetime = lifetime;			this.spawn = new Date().getTime();			this.ct = this.spawn;						addEventListener(Event.ENTER_FRAME, handleEnter)					}				private function handleEnter(e:Event){						var t:Number = new Date().getTime();			var o:Number = t-ct;						this.x += Math.cos(angle)*speed*o			this.y += Math.sin(angle)*speed*o						speed*=.97			this.scaleX *= .99			this.scaleY *= .99			this.alpha = 1-((t-spawn)/lifetime)						ct = t;						if(t-spawn > lifetime){				removeEventListener(Event.ENTER_FRAME, handleEnter)				if(this.parent)					this.parent.removeChild(this)			}					}	}}