package {	import flash.display.Sprite;	import flash.display.MovieClip	public class StarScape extends Sprite{		private var componentWidth:int;		private var componentHeight:int;		private var stars:Array = [];		private var count:int;		public function StarScape(width:int, height:int, count:int){			this.count = count			this.componentWidth = width			this.componentHeight = height			for( var a:int=0;a<count;a++){				var s:Star = new Star();				s.alpha = (Math.random()*Math.random()*Math.random())+.2								s.scaleX = (1+s.alpha)/4				s.scaleY = (1+s.alpha)/4								s.x = s.X = Math.random()*width				s.y = s.Y = Math.random()*height				s.cacheAsBitmap = true				stars.push(s);				addChild(s);			}		}		public function Move(x:Number,y:Number){			for(var a:int=0;a<count;a++){				var s:Star = stars[a] as Star;				s.X += Math.round(x*s.alpha*100)/100				s.Y += Math.round(y*s.alpha*100)/100				if(s.X<-s.width){					s.Y = Math.random()*componentHeight;					s.X += componentWidth+s.width				}				if(s.X>componentWidth+s.width){					s.Y = Math.random()*componentHeight;					s.X -= componentWidth+s.width				}								if(s.Y<-s.height){					s.Y += componentHeight+s.height					s.X = Math.random()*componentWidth				}				if(s.Y>componentHeight+s.height){					s.Y -= componentHeight+s.height					s.X = Math.random()*componentWidth				}								s.x = s.X>>0				s.y = s.Y>>0			}		}	}	}