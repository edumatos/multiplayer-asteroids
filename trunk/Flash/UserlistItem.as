package {	import flash.display.MovieClip	import flash.text.TextField	import flash.text.TextFormat	public class UserlistItem extends MovieClip{		private var ship:Ship;		function UserlistItem(ship:Ship){			this.ship = ship			this.title.text = ship.Title		}		public function Refresh(offset:Number){			score.htmlText = '<font color="#00ff00">' + ship.Kills + '</font>/<font color="#ff0000">' + ship.Deaths + '</font>'			rank.text = offset.toString();			level.text.text = XPBar.GetLevel(ship.XP)					}	}}	