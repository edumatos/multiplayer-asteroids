package {	import flash.display.MovieClip	import flash.utils.Dictionary;	public class Hud extends MovieClip{		private var blips:Dictionary = new Dictionary()		private var X:Number = 0;		private var Y:Number = 0;		public function Hud(){		}		public function AddBlip(blip:MovieClip, target:MovieClip):void{			blips[target] = blip;			blipcontainer.addChild(blip);			Refresh(X,Y)		}		public function RemoveBlip(target:MovieClip):void{			if(blips[target]){				blipcontainer.removeChild(blips[target]);				delete blips[target]			}		}				public function SetShield(v:Number){			shieldbar.SetValue(v)		}				public function SetHold(v:Number){			holdbar.SetValue(v)		}				public function Refresh(x:Number, y:Number):void{						for( var target:Object in blips){				var blip:MovieClip = blips[target];								var ox:Number = target.x-x 				var oy:Number = target.y-y 								var angle:Number = Math.atan2(oy,ox);				var dist:Number = Math.sqrt(ox*ox+oy*oy)								blip.x = Math.cos(angle)*50				blip.y = Math.sin(angle)*50								blip.visible = target.visible											blip.rotation = 180/Math.PI * angle				blip.alpha = Math.max(1-(dist/1400),.3)							}			X = x			Y = y		}	}	}