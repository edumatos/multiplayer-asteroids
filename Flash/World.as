package {	import flash.display.Sprite	import flash.display.DisplayObject	public class World extends Sprite{		private var child:Sprite;		private var componentWidth:Number		private var componentHeight:Number		private var scale:Number = 1		function World(width:Number, height:Number){			child = new Sprite();						var m:Sprite = new Sprite();			m.graphics.beginFill(0xff0000,1);			m.graphics.drawRect(0,0,width,height);						super.addChild(m)			this.mask = m;						componentWidth = width			componentHeight = height			super.addChild(child);					}		public override function addChild(d:DisplayObject):DisplayObject{			return child.addChild(d)		}		public override function removeChild(d:DisplayObject):DisplayObject{			return child.removeChild(d)		}				public override function get width():Number{			return componentWidth * scale		}		public override function get height():Number{			return componentHeight * scale		}				public function AddChild(d:DisplayObject, below:Boolean = true):DisplayObject{			var ch:DisplayObject = super.addChild(d);			if(below){				this.setChildIndex(ch,this.getChildIndex(child));			}						return ch;		}				public function SetSize(width:Number, height:Number){						var wx:Number = width/componentWidth;			var wy:Number = height/componentHeight;			scale = wx < wy ? wx : wy			this.scaleX = scale			this.scaleY = scale		}								public function Center(x:Number, y:Number){			child.x = -x + componentWidth/2			child.y = -y + componentHeight/2		}	}}